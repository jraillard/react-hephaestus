{
  "name": "react-hephaestus",
  "displayName": "React Hephaestus",
  "description": "The ultime tool for forging React components.",
  "version": "1.0.0",
  "publisher": "jraillard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jraillard/react-hephaestus"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "react",
    "javascript",
    "typescript",
    "jsx",
    "tsx",
    "builder"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "React Hephaestus",
      "properties": {
        "reactHephaestus.global.quotes": {
          "type": "string",
          "enum": [
            "single",
            "double"
          ],
          "enumDescriptions": [
            "Single quote",
            "Double quote"
          ],
          "default": "single",
          "description": "Define whether to use single or double quote for imports"
        },
        "reactHephaestus.files.rewrite": {
          "type": "boolean",
          "default": true,
          "description": "Allow to rewrite a component folder"
        },
        "reactHephaestus.components.useHooks": {
          "type": "boolean",
          "default": true,
          "description": "Define to use hook file or not"
        },
        "reactHephaestus.components.extension": {
          "type": "string",
          "enum": [
            "ts / tsx",
            "js / jsx"
          ],
          "enumDescriptions": [
            "Typescript way",
            "Javascript way"
          ],
          "default": "ts / tsx",
          "description": "The extension for component files"
        }
      }
    },
    "commands": [
      {
        "command": "react-hephaestus.forgeReactComponent",
        "title": "Hepheastus: Forge React Component ðŸ”¨"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "react-hephaestus.forgeReactComponent",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.28.8",
    "change-case": "^4.1.2",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.7",
    "path": "^0.12.7",
    "rxjs": "^7.8.1"
  }
}